<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mward.Views.StylistPage">
    <StackLayout Padding="20">
        <Label Text="Stylist Suggestions" FontSize="24" HorizontalOptions="Center" />
        <ListView x:Name="StylistListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Outfit}" Detail="{Binding Occasion}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Get New Suggestion" Clicked="OnGetSuggestionClicked" />
    </StackLayout>
</ContentPage>
